<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/anlik_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sonuc_txt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#8E8C8C"
        android:textSize="35sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:id="@+id/sonuc_txt"
        android:layout_above="@+id/Analayout">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom ="true"
        android:id="@+id/Analayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ilksatir">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="AC"

                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:textColor="#CD461B"
                android:id="@+id/tumSil_btn">

            </Button>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Sil"
                android:textSize="20sp"
                android:textColor="#CD461B"

                android:background="@drawable/butonlar"
                android:id="@+id/sil_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="%"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:textColor="#CD461B"
                android:id="@+id/yuzde_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="/"
                android:textSize="20sp"
                android:textColor="#CD461B"
                android:background="@drawable/butonlar"
                android:id="@+id/bolme_btn">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ikincisatir">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="7"
                android:textSize="20sp"
                android:background="@drawable/butonlar"

                android:id="@+id/yedi_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/sekiz_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="9"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/dokuz_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="X"
                android:textSize="20sp"
                android:textColor="#CD461B"
                android:background="@drawable/butonlar"
                android:id="@+id/carpma_btn">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ucuncusatir">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/dort_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="5"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/bes_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="6"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/alti_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="-"
                android:textColor="#CD461B"
                android:background="@drawable/butonlar"
                android:textSize="20sp"
                android:id="@+id/cikarma_btn">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/butonlar"
            android:id="@+id/dorduncusatir">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/bir_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="2"
                android:background="@drawable/butonlar"
                android:textSize="20sp"
                android:id="@+id/iki_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="3"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/uc_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="+"
                android:textColor="#CD461B"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/topla_btn">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/besincisatir">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="SM"
                android:textColor="#CD461B"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/bilimsel">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="0"
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/sifir_btn">

            </Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=","
                android:textSize="20sp"
                android:background="@drawable/butonlar"
                android:id="@+id/virgul_btn">

            </Button>

            <Button
                android:id="@+id/esittir_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/butonlar"
                android:text="="
                android:textSize="20sp"
                android:textColor="#CD461B">
            </Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>